<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GroupDetailFragment">



    <ImageButton
        android:id="@+id/imageButton89"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="#00000000"
        android:contentDescription="Button for go back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/iconback" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GroupName"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/brown"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toEndOf="@+id/imageButton89"
        app:layout_constraintTop_toTopOf="parent"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton89"
        app:layout_constraintBottom_toTopOf="@+id/bottom1"
        android:layout_marginTop="50dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/groupDetailRecycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </FrameLayout>
    <TextView
        android:id="@+id/bottom1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group Detail Only"
        android:textSize="15dp"
        android:textColor="@color/lightpeach"
        android:textStyle="bold"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/addgroupstring" />


</androidx.constraintlayout.widget.ConstraintLayout>